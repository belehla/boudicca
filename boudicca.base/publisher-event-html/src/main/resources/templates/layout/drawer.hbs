<style>
    @layer default {
    .drawer {
        display: flex;
        padding: 0 24px 24px 24px;
        flex-wrap: wrap;
        margin-bottom: 24px;
        border-bottom: 1px solid var(--color-main-grey);
    }

    .multiselect-labels, .drawer input, .drawer select {
        border: 1px #ccc solid;
        border-radius: 10px;
        margin-bottom: 10px;
    }

    fieldset {
        border: none;
    }

    legend {
        margin-bottom: 12px;
    }

    input[type=checkbox] {
        margin: 0px 8px 0px -2px;
    }

    .drawer-header {
        display: flex;
        justify-content: space-between;
    }

    #filterSearchButton {
        padding: 12px 24px;
        border: 1px solid var(--color-filterSearchButton);
        border-radius: 10px;
        margin-top: 24px;
        font-size: 18px;
    }

    #resetSearchForm {
        margin-top: 12px;
        display: block;
    }

    #resetSearchForm::before {
        content: '\2715';
        border-radius: 10px;
        color: #bbb;
        margin: 0px 6px;
    }

    #resetSearchForm:hover::before {
        color: #555;
    }

    .date-input {
        appearance: none;
        min-width: 135px;
    }

    .filter-label {
        font-size: 12px;
        margin-bottom: 2px;
        font-weight: 600;
        display: flex;
        align-items: center;
    }

    .filter-input-wrapper {
        display: flex;
        flex-direction: column;
    }

    .header-search-filter {
        display: flex;
    }

    .header-search-filter button {
        display: flex;
    }

    .search-buttons {
        display: flex;
        align-items: center;
        flex-direction: column;
    }

    fieldset.accessibility {
        flex-grow: 1;
        flex-basis: 30%;
    }

    #drawer input:not([type='checkbox']), #drawer select {
        min-width: 200px;
        max-width: 300px;
    }

    @media only screen and (max-width: 700px) { 
        .header-accessibility-filter {
            flex-direction: column;
        }
    }

    .header-accessibility-filter {
        display: flex;
        flex: 1;
        gap: 12px;
        flex-wrap: wrap;
    }

    .header-date-search {
        display: flex;
        flex: 1;
        gap: 12px;
        flex-direction: column;
    }

    @media only screen and (max-width: 700px) {
        .header-date-search {
            flex-direction: column;
        }
    }

    .multiselect-wrapper {
        font-size: var(--font-size-small);
        max-width: 300px;
        min-width: 150px;
    }
    .multiselect-chips {
        width: 100%;
        max-height: 200px;
        overflow: scroll;
    }
    .multiselect-labels {
        width: 100%;
        max-height: 200px;
        overflow: scroll;
    }
    .multiselect-labels ul {
        margin: 0;
        padding: 10px;
        list-style: none;
    }
    .multiselect-labels ul li {
        margin-bottom: 4px;
    }
    .multiselect-wrapper input[type=checkbox], .chips {
        display: none;
    }
    input[type=checkbox]:checked + label.chips {
        display: inline-block;
        background-color: #eee;
        border-radius: 20px;
        padding: 4px 8px 4px 4px;
        margin-bottom: 3px;
    }
    input[type=checkbox]:checked + label.chips::before {
        content: '\2715';
        border-radius: 10px;
        color: #bbb;
        margin: 0px 6px;
    }
    input[type=checkbox]:checked + label.chips:hover::before {
        color: #555;
    }
}
</style>

<div id="drawer" class="drawer">
<!-- <button type="button" id="closeDrawerButton" title="Filtersuche schließen" tabindex="0">-->

    {{> layout/multiselect_fieldset identifier="categorySelect" name="Veranstaltungsart" entries=filters.categories }}

    <fieldset>
        <div class="header-search-filter">
            <div class="header-date-search">
                <div class="filter-input-wrapper">
                    <label for="fromDate" class="filter-label">Datum von</label>
                    <input id="fromDate" name="fromDate" type="date" class="date-input"/>
                </div>

                <div class="filter-input-wrapper">
                    <label for="toDate" class="filter-label">Datum bis</label>
                    <input id="toDate" name="toDate" type="date" class="date-input"/>
                </div>

                <div class="filter-input-wrapper">
                    <label for="includeRecurring" class="filter-label">
                        <input type="checkbox" id="includeRecurring" name="includeRecurring">
                        Zeige wiederholende<br/>Veranstaltungen
                    </label>
                </div>
            </div>
        </div>
    </fieldset>

    {{> layout/multiselect_fieldset identifier="locationName" name="Veranstaltungsort" entries=filters.locationNames }}
    {{> layout/multiselect_fieldset identifier="locationCity" name="Stadt" entries=filters.locationCities }}
    {{> layout/multiselect_fieldset identifier="bandName" name="Bandname" entries=filters.bandNames legend="Musik" data-category="MUSIC"}}

    <fieldset data-category-wanted="SPORT">
        <legend><strong>Sport</strong></legend>
        <div class="header-search-filter">
            <div class="header-date-search">
                <div class="filter-input-wrapper">
                    <label for="sportParticipation" class="filter-label">Teilnahme</label>
                    <select name="sportParticipation" id="sportParticipation" multiple>
                        <option value="">Beliebig</option>
                        <option value="active">Zum Mitmachen</option>
                        <option value="watch">Zum Zuschauen</option>
                    </select>
                </div>
            </div>
        </div>
    </fieldset>

    <fieldset class="accessibility">
        <legend><strong>Accessibility</strong></legend>
        <div class="header-search-filter">
            <div class="header-accessibility-filter">
                <div class="filter-input-wrapper">
                    <label for="accessibility.accessibleEntry" class="filter-label">
                        <input type="checkbox" id="accessibility.accessibleEntry" value="accessibility.accessibleEntry" name="flags">
                        Barrierefreier Zugang
                    </label>
                </div>
                <div class="filter-input-wrapper">
                    <label for="accessibility.accessibleSeats" class="filter-label">
                        <input type="checkbox" id="accessibility.accessibleSeats" value="accessibility.accessibleSeats" name="flags">
                        Rollstuhlplatz
                    </label>
                </div>
                <div class="filter-input-wrapper">
                    <label for="accessibility.accessibleToilets" class="filter-label">
                        <input type="checkbox" id="accessibility.accessibleToilets" value="accessibility.accessibleToilets" name="flags">
                        Barrierefreie Toiletten
                    </label>
                </div>
                <div class="filter-input-wrapper">
                    <label for="accessibility.accessibleAktivpassLinz" class="filter-label">
                        <input type="checkbox" id="accessibility.accessibleAktivpassLinz" value="accessibility.accessibleAktivpassLinz" name="flags">
                        Aktivpass möglich
                    </label>
                </div>
                <div class="filter-input-wrapper">
                    <label for="accessibility.accessibleKulturpass" class="filter-label">
                        <input type="checkbox" id="accessibility.accessibleKulturpass" value="accessibility.accessibleKulturpass" name="flags">
                        Kulturpass möglich
                    </label>
                </div>
            </div>
        </div>
    </fieldset>

    <div class="search-buttons">
        <button id="filterSearchButton" type="submit">Suchen</button>
        <button id="resetSearchForm" type="button" data-drawer-last-focusable-element>Suche zurücksetzen</button>
    </div>
</div>